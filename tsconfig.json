{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,

    // tidy imports
    "baseUrl": "./",
    "paths": {
      "@helper/*": ["src/helper/*"],
      "@controllers/*": ["src/controllers/*"],
      "@entity/*": ["src/entity/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
